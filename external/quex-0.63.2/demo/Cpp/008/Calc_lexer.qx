// This file has to be encoded in UTF-8
token {
	NUM;
}

start = ONE_AND_ONLY;

mode ONE_AND_ONLY
{
	
	<<EOF>>     => TKN_TERMINATION;
	([0-9]+[.][0-9]*)|([.][0-9]+)|([0-9]+)		=> TKN_NUM(Lexeme);
	[ \t]+		{}
	['\n']		=> '\n';
	['+']		=> '+';
	['\-']		=> '-';
	['*']		=> '*';
	['/']		=> '/';
	['^']		=> '^';
	['(']		=> '(';
	[')']		=> ')';
	
}


