Import('env')

env = env.Clone()

lexer_src = env.Quex(source='r5rs.qx',
                     QUEXENGINE='lexer',
                     QUEXLANG='C',
                     QUEXOUTDIR=Dir('quex').abspath,
                     QUEXFLAGS=['--token-id-prefix TKN_',
                                '--token-policy single',
                                '--token-class token'])

env.Append(LIBS=['argtable2', 'gc'],
           CPPDEFINES='QUEX_OPTION_ASSERTS_WARNING_MESSAGE_DISABLED')

env.Program(target='rsi',
            source=env.Object(source=[env.Glob('*.c'),
                                      env.Glob('quex/*.c')]))

