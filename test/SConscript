from os import environ, path

Import('env')
Import('rose_lib')

env = env.Clone()

env.Prepend(LIBS=[rose_lib],
            CPPPATH=[environ['GTEST_DIR'],
                     environ['GTEST_DIR'] + '/include'])

test = env.Program(target='test',
                   source=[env.Glob('*.cpp'),
                           environ['GTEST_DIR'] + '/src/gtest-all.cc'])

env.Command(target='run-test',
            source=test[0],
            action=test[0].abspath)

